.user
  .info-user
    .descr-info-user
      .l-descr-info-user
        = image_tag @user.avatar.url, {class: "img-info-user"}
      .r-descr-info-user
        .title-info-user = @user.name
        / p You passed <strong>#{@user.user_answers.size}</strong> tests
        .filter._no_margin
          .tab-filter = link_to "Settings", edit_user_path

  .cont-user
    a.title_big href="" Passed tests
    .list-cont-user
      .full-list-cont-user
        - @user.passed_tests.each do |test|
          = render "tests/item", item: test
        = render "tests/modal"

      .link-list-cont-user
        = link_to "View all passed tests Â»", tests_path

    a.title_big href="" #{if it_me?(@user) then "My" else "User's"} publishers
    .list-cont-user
      .full-list-cont-user
        - @user.publishers.each do |publisher|
          = render "publishers/item", item: publisher

      .link-list-cont-user
        = link_to "View all users publishers Â»", tests_path

  / .meta-publisher
  /   - if it_me? @user

  /.cont-user
    /.l-cont-user
      .meta-publisher
        .title_big
          span._fl_l Passed tests
          - unless @profile_tests.empty?
            / = render "tests/filter", position: "l"

      = render "tests/list", list: @profile_tests

  - @publishers.each do |x|
    = x.title
