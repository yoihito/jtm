// Includes in modal window
// See: tests/_list
.list-testgo data-count=@slides.size data-testid=@test.id
  - @slides.each_with_index do |slide, n|
    .item-testgo class=("_active" if n == 0)
      .head-item-testgo
        / a.stop-item-testgo.js-test-stop href=""
          ' &laquo;
          span Go back

      .title-item-testgo = slide.question

      .answers-item-testgo
        .answer-item-testgo.js-testgo-answ rel="0" No
        .answer-item-testgo.js-testgo-answ rel="1" Yes
        .answer-item-testgo.js-testgo-answ rel="2" Maybe

      = image_tag slide.picture.url(:medium), {class: "img-item-testgo"}

